@model MyTask

<h2 class="text-center mb-4">Детали задачи</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">@Model.Title</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Приоритет:</h5>
                <p>@Model.Priority</p>
            </div>
            <div class="col-md-6">
                <h5>Статус:</h5>
                <p>@Model.Status</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h5>Исполнитель:</h5>
                <p>@Model.Assignee</p>
            </div>
            <div class="col-md-6">
                <h5>Дата создания:</h5>
                <p id="createdAt">@Model.CreatedAt</p>
            </div>
        </div>

        <div class="mt-4">
            <h5>Описание задачи:</h5>
            <p >@Model.Description</p>
        </div>
    </div>
    <div class="card-footer text-right">
        <a href="@Url.Action("Index", "Tasks")" class="btn btn-secondary">Назад к списку</a>
        @if (Model.Status == "Open")
        {
            <a href="@Url.Action("Close", "Tasks", new { id = Model.Id })" class="btn btn-warning ml-2">Закрыть задачу</a>
        }
        @if (Model.Status == "Closed")
        {
            <a href="@Url.Action("Delete", "Tasks", new { id = Model.Id })" class="btn btn-danger ml-2" onclick="return confirm('Вы уверены, что хотите удалить задачу?')">Удалить задачу</a>
        }
    </div>
</div>




