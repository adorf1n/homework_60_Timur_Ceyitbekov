@model IEnumerable<MyTask>

<h2 class="text-center mb-4">Список задач</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название</th>
            <th scope="col">Приоритет</th>
            <th scope="col">Статус</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@task.Id">Детали</a>
                    @if (task.Status == "Open")
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Close" asp-route-id="@task.Id">Закрыть</a>
                    }
                    @if (task.Status == "Closed")
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@task.Id" onclick="return confirm('Удалить задачу?')">Удалить</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
